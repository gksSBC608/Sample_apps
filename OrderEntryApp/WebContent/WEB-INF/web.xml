<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>OrderEntryApp</display-name>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>com.mindtree.controller.HomeController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/orderHome</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Controller1</servlet-name>
		<servlet-class>com.mindtree.controller.ShoppingController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Controller1</servlet-name>
		<url-pattern>/listProducts</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Controller1</servlet-name>
		<url-pattern>/addToCart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Controller1</servlet-name>
		<url-pattern>/placeOrder</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Admin1</servlet-name>
		<servlet-class>com.mindtree.controller.AdminController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Admin1</servlet-name>
		<url-pattern>/addProductDetail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Admin1</servlet-name>
		<url-pattern>/generateSummary</url-pattern>
	</servlet-mapping>
</web-app>